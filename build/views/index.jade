extends layout


block head_scripts
        script(src="http://code.jquery.com/jquery-2.0.3.min.js")
        script(src='http://vjs.zencdn.net/5.15.1/video.js')
        link(href="http://vjs.zencdn.net/5.15.1/video-js.css" rel="stylesheet")
        script(src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js")
        script(src='/public/markers.js')
        link(href='/public/marker.css' rel="stylesheet")
        script(src='/public/rangeslider.js')
        link(href='/public/rangeslider.css' rel="stylesheet")
block body_scripts

    unless isBot
        script(defer type='text/javascript').
            (function () {
                var lazy_list = [
                    '/public/vendor/animate.css',
                    '/public/vendor/font-awesome/css/font-awesome.css',
                ].forEach(function (url, i, list) {
                    var l = document.createElement('link');
                    l.rel = 'stylesheet';
                    l.type = 'text/css';
                    l.href = url;
                    document.head.appendChild(l);
                    if (i + 1 === list.length) {
                        console.log('Lazy added vendors')
                    }
                })

            })();

        if IS_PROD
            script(defer type='text/javascript' src='/public/vendors-bundle.js')
        else
            script(defer type='text/javascript' src='/public/dll/dll.vendor.js')


        script(defer type='text/javascript' src='/public/main-bundle.js')


block content
    section#root!= html